<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutTimers.App.Views.NewRegularInterval"
             Title="New Regular Interval">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label VerticalTextAlignment="Center"  Text="Name" />
        <Entry Placeholder="Name" Grid.Column="1" />
        
        <Label VerticalTextAlignment="Center" Text="Intervals" Grid.Row="1" />
        <Entry Placeholder="Intervals" Grid.Column="1" Grid.Row="1" />

        <Label VerticalTextAlignment="Center"  Text="Repetitions" Grid.Row="2"/>
        <Entry Placeholder="Repetitions" Grid.Column="1" Grid.Row="2"/>

        <Button HorizontalOptions="Center" Text="Save" Grid.ColumnSpan="2" Grid.Row="3"/>
    </Grid>
</ContentPage>